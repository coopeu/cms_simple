<% @page_title = "Admin Users List" %>

<%= link_to("<< Back to Menu", {:controller => 'access', :action => 'index'}, :class => 'back-link') %>

<div class="user index">
  <h2>Admin Users</h2>

  <%= link_to('Add New Admin User', {:action => 'new'}, :class => 'action new') %>

  <div><%= pluralize(@admin_users.size, 'administrator') %> found</div>

  <table class="listing" summary="Admin users list">
    <tr>
      <th>Username</th>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
    <% @admin_users.order('LOWER(username)').each do |au| %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td><%= au.username %></td>
      <td><%= au.name %></td>
      <td><%= mail_to(au.email) %></td>
      <td class="actions">
        <%= link_to('Edit', {:action => 'edit', :id => au.id}, :class => 'action edit') %>
        <%= link_to('Delete', {:action => 'delete', :id => au.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>

</div>
